# ======================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# ======================
# Copy this file to .env.production and fill in your actual values
# NEVER commit the actual .env.production file to version control

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5001
API_URL=https://your-domain.com/api

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/production-db?retryWrites=true&w=majority
# Connection pool size for production
MONGODB_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WhatsApp/Twilio (Optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=

# Email Configuration (Optional - for future implementation)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@your-domain.com

# Logging
LOG_LEVEL=error
LOG_FILE_PATH=./logs/production.log

# Security
# Set to true in production to enforce HTTPS
FORCE_HTTPS=true
# Session secret for cookie signing
SESSION_SECRET=your-session-secret-min-32-characters-long

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://your-domain.com
